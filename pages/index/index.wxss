/**index.wxss**/
.full-banner {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
  padding-top:20rpx;
  background-color: #a0daee;
  background-image:url('https://duokeyun.oss-cn-qingdao.aliyuncs.com/wechat/wxapp/superman/images/index_bg.png');
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: center 350rpx;
}

.img-title {
  width: 549rpx;
  height: 405rpx;
  margin-top: 30rpx;
}

.game-rule {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding-right:35rpx;
}
.rule-btn {
  height:50rpx;
  border-radius: 25rpx;
  background:#81b6ea;
  border:2rpx #fff solid;
  padding:0 25rpx;
  line-height: 50rpx;
}

.fight-num {
  margin: 10rpx 0;
}

.fight-btn {
  position:relative;
  width: 606rpx;
  height: 116rpx;
  border-radius: 62rpx;
  margin:40rpx auto 20rpx auto;
  background-color:#fbcc34;
  line-height: 116rpx;
  text-align: center;
  border-bottom:8rpx #eda621 solid;
  box-shadow: 0 0 0rpx 20rpx #fff;
}

.invited {
  width: 606rpx;
  height: 116rpx;
  margin-top:40rpx;
  border-radius: 58rpx;
  background: rgba(57,99,224,0.3);
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 0rpx 20rpx #fff;
  margin-bottom:20rpx;
}

.img-invited {
  width: 68rpx;
  height: 55rpx;
  margin-right: 10rpx;
}

.honor {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  padding-bottom: 126rpx;
}

.adv-box {
  width: 680rpx;
  height: 200rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.adv-img {
  width: 680rpx;
  height: 200rpx;
}

.tab-content {
  padding: 25rpx 35rpx;
}

.prize-get {
  border: 2rpx #ea6c53 solid;
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #ea6c53;
}

.prize-top {
  height: 130rpx;
  padding: 0 25rpx;
}

.prize-btn {
  background: linear-gradient(to right, #ffd173, #ff9d03);
  width: 196rpx;
  height: 72rpx;
  border-radius: 336rpx;
  border: 2rpx #fff solid;
  margin: 0;
}

.prize-bot {
  line-height: 60rpx;
}

.safe-icon {
  width: 35rpx;
  height: 40rpx;
}

.marquee-container {
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 25rpx;
  height: 300rpx;
  background:#f8e0a5;
}

.modal-text {
  display: flex;
  flex: 1;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  padding: 45rpx 25rpx;
  flex-flow: column nowrap;
}

.text-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  margin: 25rpx 0;
}

.text-icon {
  width: 58rpx;
  height: 58rpx;
  border-radius: 29rpx;
  background:#81b6ea;
  overflow: hidden;
  text-align: center;
  line-height: 58rpx;
  color: #fff;
  font-size: 36rpx;
  margin-right: 10rpx;
}

.pink {
}

.blue {
}

.textRed {
  text-align: center;
  margin-top: 10rpx;
}

.red-btn {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: #f9867d;
  color: #fff;
  margin-top: 25rpx;
  font-size: 36rpx;
}

.fight-pop {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  padding: 135rpx 35rpx 35rpx;
}

.pop-head {
  position: absolute;
  left: 50%;
  margin-left: -352rpx;
  top: -50rpx;
  width: 704rpx;
  height: 178rpx;
}

.invited-btn {
  border: 2px #fff solid;
  height: 130rpx;
  border-radius: 20rpx;
  background: #fbaa0d;
  box-shadow: 0rpx 5rpx 5rpx 2rpx #ccc;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
  color: #fff;
}
