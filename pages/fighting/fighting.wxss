/* pages/fighting/fighting.wxss */

.game-process {
  position: relative;
  height: 40rpx;
  z-index: 2;
  width: 690rpx;
  margin: 20rpx auto;
}

.game-process:before {
  display: block;
  content: '';
  width: 100%;
  height: 6rpx;
  background: #fff;
  position: absolute;
  left: 0;
  top: 17rpx;
  z-index: 3;
}

.process-content {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  z-index: 4;
  height: 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  padding: 0 10rpx;
}

.process-item {
  width: 34rpx;
  height: 34rpx;
  border-radius: 17rpx;
  background: #fff;
  color: #fff;
  text-align: center;
  line-height: 34rpx;
  font-size: 26rpx;
}

.item-active {
  background: #ffc508;
}

/* 游戏 */

.game-box {
  width: 690rpx;
  margin: 20rpx auto;
  margin-top:150rpx;
  background: #fff;
  border-radius: 15rpx;
  position: relative;
}
.game-rule{
  padding-top:20rpx;
}
.game-content {
  padding: 0 30rpx;
    padding-top:50rpx;
}

.item-title {
  display: block;
  margin: 80rpx auto;
  text-align: center;
}

.game-item {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  border: 5rpx #e5e5e5 solid;
  background-color: #fff;
  margin-bottom: 30rpx;
  line-height: 90rpx;
  padding-left: 45rpx;
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
  background-position: 550rpx center;
}

.correct {
  background-color: #57c521;
  color: #fff;
  border-color: #57c521;
  background-image: url('https://duokeyun.oss-cn-qingdao.aliyuncs.com/wechat/wxapp/superman/images/correct_icon.png');
}

.wrong {
  background-color: #ff673e;
  color: #fff;
  border-color: #ff673e;
  background-image: url('https://duokeyun.oss-cn-qingdao.aliyuncs.com/wechat/wxapp/superman/images/wrong_icon.png');
}

.item-index {
  display: block;
  text-align: center;
  margin-bottom: 30rpx;
}

/* 失败弹窗内容 */
.alert-content{
  position: absolute;
  left:0;
  right:0;
  bottom:0;
  top:0;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  padding:0 35rpx;
}
.alert-icon{
  width:172rpx;
  height:173rpx;
  margin-right:10rpx;
  margin-top:-30rpx;
}
.alert-invited-btn{
  width:430rpx;
  height:90rpx;
  border-radius: 45rpx;
  background:#ffc508;
  color:#fff;
  font-size:36rpx;
  margin-top:25rpx;
}
.alert-invited-btn:after{
  display: none;
}
.success-content{
  position: absolute;
  left:0;
  top:0;
  right:0;
  bottom:0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
}
.success-img{
  width:602rpx;
  height:709rpx;
}
.success-btn{
  width:412rpx;
  height:109rpx;
  margin-top:10rpx;
}

/* 倒计时 */
.count-down{
  position: absolute;
  width:210rpx;
  height:210rpx;
  background:#fff;
  left:50%;
  top:0;
  margin-top:-105rpx;
  margin-left:-105rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  border-radius: 105rpx;
  overflow:hidden;
}